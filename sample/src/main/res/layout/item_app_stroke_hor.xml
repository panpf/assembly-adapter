<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appStrokeHorItemContentLayout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#336E75A4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/appStrokeHorItemIconImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/appStrokeHorItemNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appStrokeHorItemIconImage"
            tools:text="谷歌浏览器谷歌浏览器谷歌浏览器谷歌浏览器谷歌浏览器谷歌浏" />

        <TextView
            android:id="@+id/appStrokeHorItemVersionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appStrokeHorItemNameText"
            tools:text="1.2.0" />

        <TextView
            android:id="@+id/appStrokeHorItemSizeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appStrokeHorItemVersionText"
            tools:text="100MB " />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintBottom_toBottomOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintStart_toStartOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintTop_toTopOf="@id/appStrokeHorItemContentLayout" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintBottom_toBottomOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintEnd_toEndOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintTop_toTopOf="@id/appStrokeHorItemContentLayout" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintEnd_toEndOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintStart_toStartOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintTop_toTopOf="@id/appStrokeHorItemContentLayout" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintBottom_toBottomOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintEnd_toEndOf="@id/appStrokeHorItemContentLayout"
        app:layout_constraintStart_toStartOf="@id/appStrokeHorItemContentLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
