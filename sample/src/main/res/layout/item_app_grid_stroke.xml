<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#336E75A4">

    <LinearLayout
        android:id="@+id/appGridStrokeItemContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/appGridStrokeItemIconImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/appGridStrokeItemNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="发顺丰就撒娇发牢骚 " />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintBottom_toBottomOf="@id/appGridStrokeItemContentLayout"
        app:layout_constraintStart_toStartOf="@id/appGridStrokeItemContentLayout"
        app:layout_constraintTop_toTopOf="@id/appGridStrokeItemContentLayout" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintBottom_toBottomOf="@id/appGridStrokeItemContentLayout"
        app:layout_constraintEnd_toEndOf="@id/appGridStrokeItemContentLayout"
        app:layout_constraintTop_toTopOf="@id/appGridStrokeItemContentLayout" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintEnd_toEndOf="@id/appGridStrokeItemContentLayout"
        app:layout_constraintStart_toStartOf="@id/appGridStrokeItemContentLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grid_item_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/appGridStrokeItemContentLayout"
        app:layout_constraintStart_toStartOf="@id/appGridStrokeItemContentLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
